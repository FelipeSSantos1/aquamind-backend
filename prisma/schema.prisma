datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  active   Boolean  @default(false)
  role     Role     @default(USER)
  profile  Profile?
}

enum Role {
  USER
  ADMIN
}

model Profile {
  id     Int     @id @default(autoincrement())
  name   String?
  user   User    @relation(fields: [userId], references: [id])
  userId String
}
