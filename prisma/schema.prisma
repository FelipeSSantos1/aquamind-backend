datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  active    Boolean  @default(false)
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relation & index --------------
  profileId Int?     @unique
  Profile   Profile? @relation(fields: [profileId], references: [id])
  Tokens    Token[]

  @@index([email])
  @@index([active])
}

enum Role {
  USER
  ADMIN
}

model Token {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  type       TokenType
  token      String    @unique
  valid      Boolean   @default(true)
  expiration DateTime
  // Relation & index --------------
  User       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  @@unique([userId, type])
}

enum TokenType {
  EMAIL
  REFRESHTOKEN
}

model Profile {
  id          Int           @id @default(autoincrement())
  name        String?
  username    String?
  country     String?
  bio         String?
  avatar      String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  // Relation & index --------------
  Following   Follower[]    @relation("Following")
  Followers   Follower[]    @relation("Follower")
  User        User?
  Tanks       Tank[]
  LikePost    LikePost[]
  Comment     Comment[]
  LikeComment LikeComment[]
  Posts       Post[]
}

model Brand {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  website    String
  logo       String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  // Relation & index --------------
  Fertilizer Fertilizer[]
  Plant      Plant[]
}

model Follower {
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Relation & index --------------
  idFollowing Int
  idFollower  Int
  Following   Profile  @relation(fields: [idFollowing], references: [id], name: "Following", onDelete: Cascade)
  Follower    Profile  @relation(fields: [idFollower], references: [id], name: "Follower", onDelete: Cascade)

  @@id([idFollowing, idFollower])
}

model Fertilizer {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  description    String?
  unit           String
  avatar         String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  // Relation & index --------------
  Brand          Brand?           @relation(fields: [brandId], references: [id])
  brandId        Int?
  TankFertilizer TankFertilizer[]
  Photos         File[]
}

model Plant {
  id             Int         @id @default(autoincrement())
  name           String      @unique
  description    String?
  scientificName String?     @unique
  avatar         String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  // Relation & index --------------
  Brand          Brand?      @relation(fields: [brandId], references: [id])
  brandId        Int?
  Photos         File[]
  TankPlant      TankPlant[]
}

model Tank {
  id             Int              @id @default(autoincrement())
  name           String
  born           DateTime?
  length         Float
  width          Float
  height         Float
  light          String?
  gravel         String?
  co2            Int?
  dayLight       Float?
  filter         String?
  description    String?
  avatar         String?
  public         Boolean          @default(true)
  location       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  // Relation & index --------------
  Profile        Profile?         @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId      Int?
  TankFertilizer TankFertilizer[]
  TankPlant      TankPlant[]
  Posts          Post[]
}

model TankFertilizer {
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  amount       Int        @default(0)
  // Relation & index --------------
  Tank         Tank       @relation(fields: [tankId], references: [id], onDelete: Cascade)
  tankId       Int
  Fertilizer   Fertilizer @relation(fields: [fertilizerId], references: [id], onDelete: Cascade)
  fertilizerId Int

  @@id([tankId, fertilizerId])
}

model TankPlant {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relation & index --------------
  Tank      Tank     @relation(fields: [tankId], references: [id], onDelete: Cascade)
  tankId    Int
  Plant     Plant    @relation(fields: [plantId], references: [id], onDelete: Cascade)
  plantId   Int

  @@id([tankId, plantId])
}

model Post {
  id          Int        @id @default(autoincrement())
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  // Relation & index --------------
  LikePost    LikePost[]
  Comment     Comment[]
  Photos      File[]
  Tank        Tank?      @relation(fields: [tankId], references: [id], onDelete: Cascade)
  tankId      Int?
  Profile     Profile?   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   Int?
}

model LikePost {
  Post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  Profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relation & index --------------

  @@id([postId, profileId])
}

model Comment {
  id          Int           @id @default(autoincrement())
  comment     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  // Relation & index --------------
  Parent      Comment?      @relation("CommentToComment", fields: [commentId], references: [id])
  commentId   Int?
  Comment     Comment[]     @relation("CommentToComment")
  Post        Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId      Int
  Profile     Profile       @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   Int
  LikeComment LikeComment[]
}

model LikeComment {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relation & index --------------
  Profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int
  Comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId Int

  @@id([profileId, commentId])
}

model File {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  type         FileType    @default(PHOTO)
  title        String?
  url          String
  // Relation & index --------------
  Post         Post?       @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId       Int?
  Plant        Plant?      @relation(fields: [plantId], references: [id], onDelete: Cascade)
  plantId      Int?
  Fertilizer   Fertilizer? @relation(fields: [fertilizerId], references: [id], onDelete: Cascade)
  fertilizerId Int?
}

enum FileType {
  PHOTO
}
